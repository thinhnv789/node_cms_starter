mixin form(data={})
    .box.box-warning
        form.form-horizontal(role='form', method='POST', action=data._id ? '/permission/update/' + data._id : '/permission/create')
            .box-header.with-border
                h3.box-title Thông tin quyền truy cập
            // /.box-header
            .box-body
                .form-group
                    .col-lg-6.col-md-6(class=errors && errors.permissionName && 'has-error')
                        label.control-label Tên quyền
                        input.form-control(type='text', name='permissionName', value=(data.permissionName || ''), placeholder='Nhập tên quyền')
                        if errors && errors.permissionName
                            span.help-block #{errors.permissionName.msg}
                    .col-lg-6.col-md-6(class=errors && errors.accessRouter && 'has-error')
                        label.control-label Access Router
                        input.form-control(type='text', name='accessRouter', value=(data.accessRouter || ''), placeholder='Access Router')
                        if errors && errors.accessRouter
                            span.help-block #{errors.accessRouter.msg}
                .form-group
                    .col-lg-6.col-md-6(class=errors && errors.description && 'has-error')
                        label.control-label Description
                        textarea.form-control(type='text', name='description', value=(data.description || ''), placeholder='description')
                        if errors && errors.description
                            span.help-block #{errors.description.msg}
                    .col-lg-2.col-md-2(class=errors && errors.status && 'has-error')
                        label.control-label Trạng thái
                        select#select-status.form-control(name='status')
                            option(value=1, selected=(data.status == 1) ? true : false) Active
                            option(value=0, selected=(data.status == 0) ? true : false) Inactive
                // Box footer        
            .box-footer
                button.btn.btn-success(type='submit')
                    i.fa.fa-check
                    |&nbsp;#{data._id ? 'Cập nhật' : 'Tạo mới'}