// Left side column. contains the sidebar
aside.main-sidebar
	// sidebar: style can be found in sidebar.less
	section.sidebar
		// Sidebar user panel
		.user-panel
			.pull-left.image
				img.img-circle(src=(user && user.avatar) ? user.avatarUrl : '', alt='User Image')
			.pull-left.info
				p #{user ? user.fullName : 'Anonymous'}
				a(href='#')
					i.fa.fa-circle.text-success
					|  Online
		// search form
		form.sidebar-form(action='#', method='get')
			.input-group
				input.form-control(type='text', name='q', placeholder='Search...')
				span.input-group-btn
					button#search-btn.btn.btn-flat(type='submit', name='search')
						i.fa.fa-search
		// /.search form
		// sidebar menu: : style can be found in sidebar.less
		ul.sidebar-menu(data-widget='tree')
			li.header
				i.fa.fa-bars &nbsp;&nbsp;MAIN MENU
			li(class=(current == 'dashboard') ? 'active' : null)
				a(href='/')
					i.fa.fa-dashboard
					span Dashboard
			li.treeview
				a(href='#')
					i.fa.fa-share
					span Multilevel
					span.pull-right-container
						i.fa.fa-angle-left.pull-right
				ul.treeview-menu
					li
						a(href='#')
							i.fa.fa-circle-o
							|  Level One
					li.treeview
						a(href='#')
							i.fa.fa-circle-o
							|  Level One
							span.pull-right-container
								i.fa.fa-angle-left.pull-right
						ul.treeview-menu
							li
								a(href='#')
									i.fa.fa-circle-o
									|  Level Two
							li.treeview
								a(href='#')
									i.fa.fa-circle-o
									|  Level Two
									span.pull-right-container
										i.fa.fa-angle-left.pull-right
								ul.treeview-menu
									li
										a(href='#')
											i.fa.fa-circle-o
											|  Level Three
									li
										a(href='#')
											i.fa.fa-circle-o
											|  Level Three
					li
						a(href='#')
							i.fa.fa-circle-o
							|  Level One
			li.header
				i.fa.fa-cogs &nbsp;&nbsp;HỆ THỐNG
			li(class=(current == 'setting') ? 'active' : null)
				a(href='/setting')
					i.fa.fa-cog
					span Cài đặt
			li(class=(current == 'account') ? 'active' : null)
				a(href='/account')
					i.fa.fa-users
					span Tài khoản
			li(class=(current == 'login-manager') ? 'active' : null)
				a(href='/login-manager')
					i.fa.fa-laptop
					span Quản lý thiết bị
	// /.sidebar
