		span.logo-mini
			b C
			| MS
		// logo for regular state and mobile devices
		span.logo-lg
			b Cms
			| BASE
	// Header Navbar: style can be found in header.less
	nav.navbar.navbar-static-top
		// Sidebar toggle button
		a.sidebar-toggle(href='#', data-toggle='push-menu', role='button')
			span.sr-only Toggle navigation
			span.icon-bar
			span.icon-bar
			span.icon-bar
		.navbar-custom-menu
			ul.nav.navbar-nav
				// Messages: style can be found in dropdown.less
				li.dropdown#header-messages.messages-menu
					a.dropdown-toggle(href='#', data-toggle='dropdown')
						i.fa.fa-envelope-o
						span.message-count.label.label-danger 0
					ul.dropdown-menu.message-list
						li.header Tin nhắn gần đây
						li
							// inner menu: contains the actual data
							ul.menu
						li.footer
							a(href='#') See All Messages
				// Notifications: style can be found in dropdown.less
				li.dropdown#header-notifications.notifications-menu
					a.dropdown-toggle(href='#', data-toggle='dropdown')
						i.fa.fa-bell-o
						span.notification-count.label.label-warning(style='display:none;') 0
					ul.dropdown-menu
						li.notification-title.header Không có thông báo nào
						li
							// inner menu: contains the actual data
							ul.notification-list.menu
						li.footer
							a(href='#') Xem thêm
