block content
    // Content Header (Page header)
    section.content-header
      h1
        | Log lịch sử
      ol.breadcrumb
        li
          a(href='/')
            i.fa.fa-dashboard
            |  Dashboard
        li.active Log
    // Main content
    section.content
        .row
            .col-lg-12.col-md-12
                .x-scroll(style='width: 100%; overflow-x: auto;overflow-y: hidden;')
                    table#login-nanager.table.table-responsive.table-border
                        thead
                            tr
                                th(name='STT') STT
                                th(name='title') Title
                                th(name='ip') Ip Address
                                th(name='referrer') Referrer
                                th(name='collectionRef') Collection
                                th(name='createdAt') Logged Time
                        tbody 
                            each dt, i in data
                                tr
                                    td #{i+1}
                                    td #{dt.title}
                                    td #{dt.ip}
                                    td #{dt.referrer}
                                    td #{dt.collectionRef}
                                    td #{moment(dt.createdAt).format('DD-MM-YYYY H:m:s')}

